<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="600"
        x:Class="GameOfLife.Presentation.Views.NewGameDialog"
        Title="New Game"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="false">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Create New Game" 
                       FontSize="18" 
                       FontWeight="Bold"/>
            <TextBlock Text="Enter the dimensions for the new board (Max: 500x500):"
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="Width:"
                       VerticalAlignment="Center"
                       FontSize="14"/>
            <NumericUpDown Grid.Row="0" Grid.Column="2"
                          x:Name="WidthInput"
                          Value="100"
                          Minimum="10"
                          Maximum="500"
                          Increment="10"
                          FormatString="0"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Height:"
                       VerticalAlignment="Center"
                       FontSize="14"/>
            <NumericUpDown Grid.Row="2" Grid.Column="2"
                          x:Name="HeightInput"
                          Value="100"
                          Minimum="10"
                          Maximum="500"
                          Increment="10"
                          FormatString="0"/>
        </Grid>
        
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="Rules Configuration"
                       FontSize="16"
                       FontWeight="Bold"/>
            
            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="Preset:"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <ComboBox Grid.Column="2"
                          x:Name="PresetComboBox"
                          SelectionChanged="PresetComboBox_SelectionChanged"
                          HorizontalAlignment="Stretch"/>
            </Grid>
            
            <StackPanel Grid.Row="4" Grid.Column="0" Spacing="8">
                <TextBlock Text="Birth (B) - Neighbor counts for birth:"
                           FontSize="13"
                           FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <NumericUpDown Grid.Row="0" Grid.Column="0"
                                   x:Name="BirthInput"
                                   Minimum="0"
                                   Maximum="8"
                                   Value="3"
                                   FormatString="0"/>
                    <Button Grid.Row="0" Grid.Column="2"
                            Content="Add"
                            Click="AddBirth_Click"
                            Padding="15,5"/>
                    
                    <ListBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                             x:Name="BirthList"
                             Height="120"
                             SelectionMode="Single"/>
                </Grid>
                <Button Content="Remove Selected"
                        Click="RemoveBirth_Click"
                        HorizontalAlignment="Stretch"
                        Padding="5"/>
            </StackPanel>
            
            <StackPanel Grid.Row="4" Grid.Column="2" Spacing="8">
                <TextBlock Text="Survival (S) - Neighbor counts for survival:"
                           FontSize="13"
                           FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <NumericUpDown Grid.Row="0" Grid.Column="0"
                                   x:Name="SurvivalInput"
                                   Minimum="0"
                                   Maximum="8"
                                   Value="2"
                                   FormatString="0"/>
                    <Button Grid.Row="0" Grid.Column="2"
                            Content="Add"
                            Click="AddSurvival_Click"
                            Padding="15,5"/>
                    
                    <ListBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                             x:Name="SurvivalList"
                             Height="120"
                             SelectionMode="Single"/>
                </Grid>
                <Button Content="Remove Selected"
                        Click="RemoveSurvival_Click"
                        HorizontalAlignment="Stretch"
                        Padding="5"/>
            </StackPanel>
        </Grid>
        
        <TextBlock Grid.Row="6"
                   Text="Note: Default is Conway's Life (B3/S23). Add neighbor counts (0-8) to each list."
                   FontSize="12"
                   FontStyle="Italic"
                   Foreground="Gray"
                   TextWrapping="Wrap"/>
        
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Cancel"
                    Width="100"
                    Padding="10,8"
                    Click="Cancel_Click"/>
            <Button Content="Create"
                    Width="100"
                    Padding="10,8"
                    Click="Create_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
