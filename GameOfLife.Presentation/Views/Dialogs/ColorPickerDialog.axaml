<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="500"
        x:Class="GameOfLife.Presentation.Views.Dialogs.ColorPickerDialog"
        Title="Pick Color"
        Width="450"
        Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="false"
        Background="#2C2C2C">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0"
                   Text="Select a Color"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="White"/>
        
        <!-- Color Preview -->
        <Border Grid.Row="2"
                Height="60"
                x:Name="ColorPreview"
                Background="#4CAF50"
                CornerRadius="4"
                BorderBrush="White"
                BorderThickness="2"/>
        
        <!-- RGB Sliders -->
        <StackPanel Grid.Row="4" Spacing="15">
            <StackPanel Spacing="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="R" Foreground="#FF5555" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" x:Name="RedSlider" Minimum="0" Maximum="255" Value="76" 
                            ValueChanged="ColorSlider_ValueChanged"/>
                    <TextBlock Grid.Column="2" Text="{Binding #RedSlider.Value}" Foreground="White" 
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
            
            <StackPanel Spacing="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="G" Foreground="#55FF55" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" x:Name="GreenSlider" Minimum="0" Maximum="255" Value="175" 
                            ValueChanged="ColorSlider_ValueChanged"/>
                    <TextBlock Grid.Column="2" Text="{Binding #GreenSlider.Value}" Foreground="White" 
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
            
            <StackPanel Spacing="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="B" Foreground="#5555FF" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" x:Name="BlueSlider" Minimum="0" Maximum="255" Value="80" 
                            ValueChanged="ColorSlider_ValueChanged"/>
                    <TextBlock Grid.Column="2" Text="{Binding #BlueSlider.Value}" Foreground="White" 
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
            
            <StackPanel Spacing="5">
                <TextBlock Text="Hex Color:" Foreground="White" FontSize="13"/>
                <TextBox x:Name="HexInput" 
                         Text="#4CAF50"
                         FontFamily="Consolas,monospace"
                         TextChanged="HexInput_TextChanged"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Cancel"
                    Width="100"
                    Padding="10,8"
                    Click="Cancel_Click"/>
            <Button Content="OK"
                    Width="100"
                    Padding="10,8"
                    Click="OK_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
