<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GameOfLife.Presentation.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             x:Class="GameOfLife.Presentation.Views.Components.GameControlsPanel"
             x:DataType="vm:GameViewModel">
    <StackPanel Orientation="Horizontal" Spacing="10">
        <Button Content="{Binding StartButtonText}" 
                Command="{Binding ToggleStartCommand}"
                Padding="15,8"
                FontSize="14"
                MinWidth="80"/>
        <Button Content="Next Generation" 
                Command="{Binding NextGenerationCommand}"
                Padding="15,8"
                FontSize="14"/>
        
        <TextBlock Text="Speed (ms):" 
                   VerticalAlignment="Center"
                   Margin="20,0,5,0"
                   FontSize="14"/>
        
        <Slider Value="{Binding SpeedMs, Mode=TwoWay}"
                Minimum="100"
                Maximum="1000"
                Width="200"
                VerticalAlignment="Center"
                TickFrequency="10"
                IsSnapToTickEnabled="True"/>
        
        <TextBox Text="{Binding SpeedMs, Mode=TwoWay}"
                 Width="60"
                 VerticalAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="14"/>
        
        <TextBlock Text="ms" 
                   VerticalAlignment="Center"
                   Margin="5,0,0,0"
                   FontSize="14"/>
        
        <CheckBox Content="Auto-pause on stable state"
                  IsChecked="{Binding AutoPauseOnStableState, Mode=TwoWay}"
                  VerticalAlignment="Center"
                  Margin="20,0,0,0"
                  FontSize="14"/>
        
        <TextBlock Text="History depth:" 
                   VerticalAlignment="Center"
                   Margin="10,0,5,0"
                   FontSize="14"/>
        
        <TextBox Text="{Binding HistoryDepth, Mode=TwoWay}"
                 Width="50"
                 VerticalAlignment="Center"
                 HorizontalContentAlignment="Center"
                 FontSize="14"/>
    </StackPanel>
</UserControl>
