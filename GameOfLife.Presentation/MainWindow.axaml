<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GameOfLife.Presentation.ViewModels"
        xmlns:views="clr-namespace:GameOfLife.Presentation.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="1000"
        x:Class="GameOfLife.Presentation.MainWindow"
        x:DataType="vm:GameViewModel"
        Title="Game of Life - 100x100 Grid"
        Width="1000"
        Height="1000">
    <Design.DataContext>
        <vm:GameViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Background="#2C2C2C" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        x:Name="MenuButton"
                        Content="☰"
                        FontSize="24"
                        Padding="15,0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Click="MenuButton_Click"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="10">
                    <Button Content="{Binding StartButtonText}" 
                            Command="{Binding ToggleStartCommand}"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="Bold"
                            MinWidth="100"/>
                    <Button Content="Next ▶" 
                            Command="{Binding NextGenerationCommand}"
                            Padding="15,10"
                            FontSize="14"/>
                    
                    <TextBlock Text="Speed:" 
                               VerticalAlignment="Center"
                               Margin="20,0,5,0"
                               Foreground="White"
                               FontSize="14"/>
                    
                    <Slider Value="{Binding SpeedMs, Mode=TwoWay}"
                            Minimum="100"
                            Maximum="1000"
                            Width="150"
                            VerticalAlignment="Center"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"/>
                    
                    <TextBox Text="{Binding SpeedMs, Mode=TwoWay}"
                             Width="50"
                             VerticalAlignment="Center"
                             HorizontalContentAlignment="Center"
                             FontSize="14"/>
                    
                    <TextBlock Text="ms" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontSize="14"/>
                </StackPanel>
                
                <views:GameStatsPanel Grid.Column="2" 
                                      DataContext="{Binding}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,20,0"/>
            </Grid>
            
            <Grid Grid.Row="1" Background="#232323" Height="40">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="20">
                    <CheckBox Content="Auto-pause on stable state"
                              IsChecked="{Binding AutoPauseOnStableState, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              Foreground="White"
                              FontSize="13"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="History depth:" 
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontSize="13"/>
                        
                        <TextBox Text="{Binding HistoryDepth, Mode=TwoWay}"
                                 Width="50"
                                 VerticalAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        
        <Grid Grid.Row="1">
            <views:GameBoardView DataContext="{Binding BoardViewModel}"/>
            
            <Border x:Name="MenuPanel"
                    Width="250"
                    HorizontalAlignment="Left"
                    Background="#2C2C2C"
                    BoxShadow="5 0 15 0 #40000000"
                    Margin="-250,0,0,0">
                <Border.Styles>
                    <Style Selector="Border.open">
                        <Style.Animations>
                            <Animation Duration="0:0:0.3" FillMode="Forward">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Margin" Value="-250,0,0,0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                    <Style Selector="Border.closed">
                        <Style.Animations>
                            <Animation Duration="0:0:0.3" FillMode="Forward">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Margin" Value="0,0,0,0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Margin" Value="-250,0,0,0"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,20,0,0" Spacing="5">
                        <Button Content="New Game"
                                Click="NewGame_Click"
                                Padding="20,12"
                                FontSize="14"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Margin="10,0"
                                Background="#3C3C3C"
                                Foreground="White"/>
                    </StackPanel>
                    
                    <Button Grid.Row="1"
                            Content="Exit"
                            Click="Exit_Click"
                            Padding="20,12"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Margin="10,0,20,20"
                            Background="#D32F2F"
                            Foreground="White"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
