<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GameOfLife.Presentation.ViewModels"
        xmlns:views="clr-namespace:GameOfLife.Presentation.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="1000"
        x:Class="GameOfLife.Presentation.MainWindow"
        x:DataType="vm:GameViewModel"
        Title="Game of Life - 100x100 Grid"
        Width="1000"
        Height="1000">
    <Design.DataContext>
        <vm:GameViewModel/>
    </Design.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" 
                    Orientation="Horizontal" 
                    Margin="10"
                    Spacing="10">
            <views:GameControlsPanel DataContext="{Binding}"/>
            <views:GameStatsPanel DataContext="{Binding}"/>
        </StackPanel>

        <views:GameBoardView DataContext="{Binding BoardViewModel}"/>
    </DockPanel>
</Window>
